{
  "name": "build-dev",
  "version": "0.0.12",
  "description": "Make building projects simple",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "bin": {
    "build-dev": "./dist/cli.js",
    "dev-run:once": "node --trace-warnings -r esbuild-register build.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brainsatplay/dev-build/"
  },
  "scripts": {
    "pub": "yarn run lint && yarn run build && npm publish",
    "test": "node --trace-warnings -r esbuild-register build.config.ts",
    "build": "node --trace-warnings -r esbuild-register build.config.ts prep:dist && tsc",
    "lint": "eslint ./src --ext .ts",
    "test-bin": "build-dev"
  },
  "dependencies": {
    "@giveback007/util-lib": "0.23.1",
    "browser-sync": "^2.27.7",
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.10",
    "esbuild-plugin-postcss2": "0.1.1",
    "esbuild-register": "^3.3.1",
    "fs-extra": "^10.0.0",
    "node-html-parser": "^5.2.0",
    "tslib": "~2.3.1"
  },
  "devDependencies": {
    "@types/browser-sync": "^2.26.3",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.6",
    "@types/parse5": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "typescript": "^4.5.4"
  }
}
