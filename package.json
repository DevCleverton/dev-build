{
  "name": "build-dev",
  "version": "0.0.1",
  "description": "Make building projects simple",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brainsatplay/dev-build/"
  },
  "scripts": {
    "publish-script": "yarn run lint && yarn run build && npm publish",
    "test": "node --trace-warnings -r esbuild-register test.ts",
    "build": "node --trace-warnings -r esbuild-register esbuild.build.ts build && tsc",
    "lint": "eslint ./src --ext .ts",
    "playground:node": "node --trace-warnings -r esbuild-register esbuild.build.ts playground:nodejs",
    "playground:web": "node --trace-warnings -r esbuild-register esbuild.build.ts playground:browser"
  },
  "dependencies": {
    "@giveback007/util-lib": "0.23.0",
    "tslib": "~2.3.1",
    "esbuild-register": "^3.3.1"
  },
  "devDependencies": {
    "@types/browser-sync": "^2.26.3",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "browser-sync": "^2.27.7",
    "esbuild": "^0.14.8",
    "esbuild-plugin-postcss2": "0.1.1",
    "eslint": "^8.5.0",
    "fs-extra": "^10.0.0",
    "typescript": "^4.5.4"
  }
}
